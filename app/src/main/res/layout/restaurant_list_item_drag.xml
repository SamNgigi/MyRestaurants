<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:src="@drawable/mine"
            android:scaleType="centerCrop"
            android:id="@+id/restaurantImageView"
            android:contentDescription="@string/bike_bruh" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/restaurantImageView"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/restaurantImageView"
            android:foregroundGravity="bottom|left"
            android:src="@drawable/ic_iconmonstr_sort_1"
            />


    </RelativeLayout>

</LinearLayout>
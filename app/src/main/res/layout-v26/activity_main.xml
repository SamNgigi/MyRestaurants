<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B4162"
    tools:context=".UI.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="@string/img_desc"
        android:src="@drawable/my_restaurant"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/sample_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="@string/hello"
        android:textColor="@color/textIcons"
        android:textSize="45sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/savedRestaurantButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btn2_text"
        android:background="@color/primary"
        android:textColor="@color/primaryLight"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/findRestaurantsButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/btn1_text"
        android:background="@color/btn2"
        android:textColor="@color/primaryLight"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="17dp"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.RestaurantDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/mine"
                android:scaleType="centerCrop"
                android:id="@+id/restaurantImageView"
                android:contentDescription="@string/bike_bruh"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/view"
                    android:id="@+id/urlTextView"
                    android:drawableLeft="@drawable/ic_baseline_exit_to_app_24px"
                    android:drawableStart="@drawable/ic_baseline_exit_to_app_24px"
                    android:drawablePadding="4dp"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textColor="@color/textIcons" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/textIcons"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/phone"
                    android:drawableLeft="@drawable/ic_baseline_call_24px"
                    android:drawableStart="@drawable/ic_baseline_call_24px"
                    android:drawablePadding="4dp"
                    android:id="@+id/phoneTextView"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/textIcons"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="@string/address"
                    android:drawableLeft="@drawable/ic_baseline_map_24px"
                    android:drawableStart="@drawable/ic_baseline_map_24px"
                    android:drawablePadding="4dp"
                    android:id="@+id/addressTextView"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:gravity="center"
            android:padding="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_name"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:id="@+id/restaurantNameTextView"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tags"
                    android:textColor="@color/secondaryText"
                    android:textStyle="italic"
                    android:id="@+id/tagTextView"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rating"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/ratingTextView"/>
            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textSize="15sp"
            android:textColor="@color/textIcons"
            android:padding="20dp"
            android:background="@color/colorAccent"
            android:id="@+id/saveRestaurantButton"/>
    </LinearLayout>
</FrameLayout>